{
	"title": "CapsLock",
	"rules":[
		{
			"description": "Change Caps Lock to Control when used as modifier, ESC when used alone",
			"manipulators": [
				{
					"from": {
						"key_code": "caps_lock",
						"modifiers": {
							"optional": [
								"any"
							]
						}
					},
					"to": [
						{
							"key_code": "left_control",
							"lazy": true
						}
					],
					"to_if_alone": [
						{
							"key_code": "escape"
						}
					],
					"type": "basic"
				}
			]
		}
	]
}
