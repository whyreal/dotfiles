{
  "title": "whyreal magic",
  "rules": [
    {
      "description": "home line modifiers, shift(a,;),ctrl(s,l),option(d,k),cmd(f,j)",
      "manipulators": [
        {
          "from": { "key_code": "a", "modifiers": { "optional": [ "any" ] } },
          "to": [ { "key_code": "left_shift", "lazy": true } ],
          "to_if_alone": [ { "key_code": "a" } ],
          "type": "basic"
        },
        {
          "from": { "key_code": "semicolon", "modifiers": { "optional": [ "any" ] } },
          "to": [ { "key_code": "right_shift", "lazy": true } ],
          "to_if_alone": [ { "key_code": "semicolon" } ],
          "type": "basic"
        },
        {
          "from": { "key_code": "s", "modifiers": { "optional": [ "any" ] } },
          "to": [ { "key_code": "left_control", "lazy": true } ],
          "to_if_alone": [ { "key_code": "s" } ],
          "type": "basic"
        },
        {
          "from": { "key_code": "l", "modifiers": { "optional": [ "any" ] } },
          "to": [ { "key_code": "left_control", "lazy": true } ],
          "to_if_alone": [ { "key_code": "l" } ],
          "type": "basic"
        },
        {
          "from": { "key_code": "d", "modifiers": { "optional": [ "any" ] } },
          "to": [ { "key_code": "left_option", "lazy": true } ],
          "to_if_alone": [ { "key_code": "d" } ],
          "type": "basic"
        },
        {
          "from": { "key_code": "k", "modifiers": { "optional": [ "any" ] } },
          "to": [ { "key_code": "left_option", "lazy": true } ],
          "to_if_alone": [ { "key_code": "k" } ],
          "type": "basic"
        },
        {
          "from": { "key_code": "j", "modifiers": { "optional": [ "any" ] } },
          "to": [ { "key_code": "right_command", "lazy": true } ],
          "to_if_alone": [ { "key_code": "j" } ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Caps Lock => Control or ESC",
      "manipulators": [
        {
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Caps Lock => ESC",
      "manipulators": [
        {
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "escape"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Change escape to grave accent and tilde",
      "manipulators": [
        {
          "conditions": [
            {
              "identifiers": [
                {
                  "description": "poker",
                  "product_id": 1553,
                  "vendor_id": 3897
                }
              ],
              "type": "device_if"
            }
          ],
          "from": {
            "key_code": "escape",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
