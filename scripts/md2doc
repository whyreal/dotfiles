#pandoc --reference-docx=/Users/Real/Documents/pandoc_docx_template.docx -f markdown_phpextra -t docx --toc $1 -o $2

input=$1
extension=${input##*.}
output=${input%%.*}.docx

if [[ -d $input ]];then
	exit 0;
fi

if [[ $extension != "md" ]];then
	exit 0;
fi

pandoc --toc -t docx --reference-doc=/Users/Real/Documents/pandoc_docx_template.docx $input -o $output
